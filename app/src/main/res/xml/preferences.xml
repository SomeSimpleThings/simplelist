<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="Appearence">
        <SwitchPreferenceCompat
            app:key="@string/pref_dark_theme"
            app:summary="@string/prefs_swith_dark_summary"
            app:title="@string/prefs_switch_dark_title" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Sync settings">

        <SwitchPreference
            app:defaultValue="false"
            app:key="switch_sync"
            app:title="@string/prefs_gdrive_sync" />
    </PreferenceCategory>
    <PreferenceCategory android:title="About">
        <PreferenceScreen
            android:key="developer"
            android:summary="@string/prefs_developer"
            android:title="@string/prefs_developer_title" />

        <PreferenceScreen
            android:key="github_link"
            android:summary="@string/prefs_ghub_link"
            android:title="@string/prefs_ghub" />

        <PreferenceScreen
            android:key="version"
            android:summary="1.0"
            android:title="@string/prefs_version_title" />
    </PreferenceCategory>
</PreferenceScreen>
